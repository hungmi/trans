<div class="col-sm-6 col-md-4 mb-4" id="user-<%= user.id %>">
	<div class="card p-3">
		<div class="list-group list-group-flush">
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= User.human_attribute_name("name") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if user.name.present? %>
	          <%= user.name %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	          <span class="badge badge-pill badge-warning"><%= I18n.t("text.hint") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= User.human_attribute_name("role") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if user.role.present? %>
	          <%= user.role %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	          <span class="badge badge-pill badge-warning"><%= I18n.t("text.hint") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
	      <%= link_to I18n.t('text.edit'), edit_admin_user_path(user), class: "btn btn-primary" %>
	      <%= link_to I18n.t('text.destroy'), [:admin, user], method: :delete, data: { confirm: I18n.t("text.confirm_destroy") }, class: "btn btn-danger btn-sm float-right" %>
	    </li>
		</div>
	</div>
</div>